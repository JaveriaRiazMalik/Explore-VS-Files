@model ExploreTandT.Models.ReviewsModel

@{
    ViewBag.Title = "About";
}
<style>
    .text-validate {
        color: white;
    }
</style>

<body>
    <div id="about">
        <div class="container" style="text-align: center; margin: 80px;">


            <div class="abouttext">
                <h1 style="margin-bottom: 50px">Review</h1>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-validate" })


                    <div style = "width: 700px; height: 200px;">
                        <div class="col--12">
                            @Html.TextAreaFor(model => model.Reviews, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your review here!" } })
                            @Html.ValidationMessageFor(model => model.Reviews, "", new { @class = "text-validate" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Submit" class="btn btn-primary btn-responsive" />
                        </div>
                    </div>
                </div>
            }



        </div>
    </div>
</body>

