@model ExploreTandT.Models.UserAccountViewModel

@{
    ViewBag.Title = "Index";
}

<div id="Admin_Account">
    <div class="container">
        <h1 class="AdminAccount"></h1>
        <div class="AdminAccount-form">

            <div class="d-flex justify-content-center h-100">
                <div class="image_outer_container">
                    <!--<div class="green_icon"></div>-->
                    <div class="image_inner_container">
                        <img src="https://c1.staticflickr.com/8/7295/9354993761_cda6475b40_b.jpg">
                    </div>
                </div>
                <div  class="text-right">
                    <a href="javascript:document.getElementById('logoutForm').submit()" type="button" class="btn btn-primary btn-responsive">LogOff </a>
                </div>
            </div>

            <h2 style="font-size: 30px; color: white" ;>My Details</h2>

            <!--<span class="glyphicon glyphicon-user" aria-hidden="true"></span>-->
            <div class="table-responsive">
                <table class="table table-Simple">
                    <thead class="Column1">
                        <tr>

                            <th scope="col"> @Html.DisplayNameFor(model => model.listofusers[0].Name)</th>
                            <th scope="col">  @Html.DisplayNameFor(model => model.listofusers[1].Email)</th>
                            <th scope="col"> @Html.DisplayNameFor(model => model.listofusers[2].Address)</th>
                            <th scope="col">  @Html.DisplayNameFor(model => model.listofusers[3].CNIC)</th>
                            <th scope="col"> @Html.DisplayNameFor(model => model.listofusers[4].PhoneNumber)</th>
                          

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.listofusers)
                        {
                        <tr>

                            <th scope="row">
                                @Html.DisplayFor(modelItem => item.Name)
                            </th>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CNIC)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                            </td>
                           
                            <td>
                                <a href="~/Account/Edit/" type="button" class="btn btn-primary btn-responsive">Edit Details </a>
                            </td>
                        </tr>
                        }

                    </tbody>
                </table>
            </div>
            <p class="listText">List of All Trips</p>
            <div class="text-right">
                <button type="button" class="btn btn-primary btn-responsive">My Tours </button>
            </div>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            
                            <th scope="col"> @Html.DisplayNameFor(model => model.listofpackages[0].Name)</th>
                            <th scope="col">  @Html.DisplayNameFor(model => model.listofpackages[1].Category)</th>
                            <th scope="col"> @Html.DisplayNameFor(model => model.listofpackages[2].Places)</th>
                            <th scope="col">  @Html.DisplayNameFor(model => model.listofpackages[3].Range)</th>
                            <th scope="col">  @Html.DisplayNameFor(model => model.listofpackages[4].TourGuide)</th>
                            <th scope="col"> @Html.DisplayNameFor(model => model.listofpackages[5].Schedule)</th>
                            <th scope="col">  @Html.DisplayNameFor(model => model.listofpackages[6].Vehicle)</th>
                            <th scope="col"> @Html.DisplayNameFor(model => model.listofpackages[7].Hotel)</th>
                            <th scope="col">   @Html.DisplayNameFor(model => model.listofpackages[8].Refreshments)</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.listofpackages)
                        {
                            <tr>
                              
                                <th scope="row">
                                    @Html.DisplayFor(modelItem => item.Name)
                                </th>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Category)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Places)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Range)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TourGuide)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Schedule)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Vehicle)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Hotel)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Refreshments)
                                </td>
                                <td>
                                    <button type="button" class="btn btn-primary btn-responsive"> View Details </button>
                                </td>
                                <td>
                                    <button type="button" class="btn btn-primary btn-responsive">Cancel</button>
                                </td>
                               
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
